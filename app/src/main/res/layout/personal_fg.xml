<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_image">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/card_wrapper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="@dimen/df_martin"
            android:background="@drawable/personal_info_bg">


            <TextView
                android:id="@+id/id_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="ID: 12538092 "
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/id_tv"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/card_label_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_tv"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:gravity="center_horizontal"
                android:text="Thẻ thành viên"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/ycoin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_wrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/df_martin_bi"
            android:text="Ycoin hiện tại :         10000 Ycoin"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ycoin_next_level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ycoin_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/df_martin_sm"
            android:text="Ycoin cần lên hạng:         20000 Ycoin"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <View
            android:id="@+id/sp1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/df_separate_height"
            android:layout_below="@id/ycoin_next_level_tv"
            android:layout_marginTop="@dimen/df_martin"
            android:background="@color/separate_color" />

        <TextView
            android:id="@+id/next_level_persent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sp1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/df_martin"
            android:text="50% lên hạng"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seekbar_process"
            android:layout_width="match_parent"
            android:layout_height="@dimen/df_martin"
            android:layout_below="@id/next_level_persent_tv"
            android:layout_marginLeft="@dimen/df_martin_bi"
            android:layout_marginRight="@dimen/df_martin_bi"
            android:layout_marginTop="@dimen/df_martin"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/progress" />


        <View
            android:id="@+id/sp2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/df_separate_height"
            android:layout_below="@id/seekbar_process"
            android:layout_marginTop="@dimen/df_martin_bi"
            android:background="@color/separate_color" />

        <ImageView
            android:id="@+id/qrcode_image_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/sp2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/df_martin_bi"
            android:src="@drawable/qrcode_image" />
    </RelativeLayout>

</ScrollView>