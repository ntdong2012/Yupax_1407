<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vsec.com.yupax">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".app.YupaxApps"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LoginTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_key" />

        <activity android:name=".ui.activity.login.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.home.HomeActivity"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.activity.MoneyHistoryActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".ui.activity.login.ForgotPasswordActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".ui.activity.login.LanguageActivity"
            android:theme="@style/LoginTheme" />
        <activity android:name=".ui.activity.home.HistoryTransactionActivity" />
        <activity android:name=".ui.activity.home.ChangePasswordActivity" />
        <activity android:name=".ui.activity.login.ResendActiveCodeActivity" />
        <activity
            android:name=".ui.activity.home.ChangeProfileActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".ui.activity.home.EventDetailActivity" />
        <activity
            android:name=".ui.activity.home.CompanyDetailActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".ui.activity.home.RateActivity" />
        <activity android:name=".ui.activity.login.LoginActivity" />
        <activity android:name=".ui.activity.login.SignInActivity" />
        <activity android:name=".ui.activity.login.RegisterActivity" />
    </application>

</manifest>